---
interface Props {
  title: string;
  titleTibetan?: string;
  subtitle?: string;
  description?: string;
  image?: string;
  showScroll?: boolean;
  size?: 'full' | 'large' | 'medium';
}

const { 
  title, 
  titleTibetan,
  subtitle, 
  description, 
  image,
  showScroll = true,
  size = 'full'
} = Astro.props;

const heightClasses = {
  full: 'min-h-screen',
  large: 'min-h-[80vh]',
  medium: 'min-h-[60vh]'
};
---

<section class={`relative ${heightClasses[size]} flex items-center justify-center overflow-hidden`}>
  <!-- Background image -->
  {image && (
    <div class="absolute inset-0">
      <img 
        src={image} 
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
        decoding="async"
      />
      <div class="hero-gradient absolute inset-0"></div>
    </div>
  )}
  
  <!-- Ambient glow effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gold-500/10 rounded-full blur-3xl animate-glow"></div>
    <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-gold-600/5 rounded-full blur-3xl animate-glow" style="animation-delay: 1.5s;"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Decorative element -->
    <div class="mb-8 opacity-0 animate-fade-down" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
      <svg class="w-16 h-16 mx-auto text-gold-500/60" viewBox="0 0 64 64" fill="none">
        <circle cx="32" cy="32" r="30" stroke="currentColor" stroke-width="1" />
        <circle cx="32" cy="32" r="20" stroke="currentColor" stroke-width="1" />
        <circle cx="32" cy="32" r="10" stroke="currentColor" stroke-width="1" />
        <circle cx="32" cy="32" r="3" fill="currentColor" />
      </svg>
    </div>
    
    {subtitle && (
      <p class="text-gold-500 text-sm uppercase tracking-[0.3em] mb-4 opacity-0 animate-fade-up stagger-1" style="animation-fill-mode: forwards;">
        {subtitle}
      </p>
    )}
    
    <h1 class="font-display text-display-lg md:text-display-xl lg:text-display-2xl font-medium text-gold-100 glow-text mb-4 opacity-0 animate-fade-up stagger-2" style="animation-fill-mode: forwards;">
      {title}
    </h1>
    
    {titleTibetan && (
      <p class="font-tibetan text-2xl md:text-3xl text-gold-500/50 mb-6 opacity-0 animate-fade-up stagger-3" style="animation-fill-mode: forwards;">
        {titleTibetan}
      </p>
    )}
    
    {description && (
      <p class="max-w-2xl mx-auto text-lg md:text-xl text-sacred-300 leading-relaxed opacity-0 animate-fade-up stagger-4" style="animation-fill-mode: forwards;">
        {description}
      </p>
    )}
    
    <!-- Slot for additional content like buttons -->
    <div class="mt-10 opacity-0 animate-fade-up stagger-5" style="animation-fill-mode: forwards;">
      <slot />
    </div>
  </div>
  
  <!-- Scroll indicator -->
  {showScroll && (
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in" style="animation-delay: 1.5s; animation-fill-mode: forwards;">
      <a 
        href="#content" 
        class="flex flex-col items-center gap-2 text-sacred-400 hover:text-gold-400 transition-colors duration-300 group"
        aria-label="Scroll to content"
      >
        <span class="text-xs uppercase tracking-widest">Explore</span>
        <div class="w-5 h-8 border border-current rounded-full p-1 group-hover:border-gold-500 transition-colors">
          <div class="w-1 h-2 bg-current rounded-full mx-auto animate-bounce"></div>
        </div>
      </a>
    </div>
  )}
</section>
