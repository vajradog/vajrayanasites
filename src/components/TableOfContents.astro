---
interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const filteredHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="p-6 rounded-2xl bg-sacred-900/50 border border-sacred-700/30 mb-12">
    <h2 class="font-display text-lg text-gold-100 mb-4">Contents</h2>
    <ul class="space-y-2">
      {filteredHeadings.map((heading) => (
        <li>
          <a 
            href={`#${heading.slug}`}
            class:list={[
              'block text-sm transition-colors duration-200',
              heading.depth === 2 
                ? 'text-sacred-300 hover:text-gold-400' 
                : 'text-sacred-500 hover:text-gold-500 pl-4'
            ]}
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
